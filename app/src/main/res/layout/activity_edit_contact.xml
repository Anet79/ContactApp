<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_1">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/edit_contact_BTN_back"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/color_1"
            android:src="@drawable/ic_arrow_left"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginBottom="20dp"
            android:text="Edit Contact"


            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textSize="40sp"
            android:textStyle="italic">

        </TextView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_for_new_contact"


                    android:orientation="vertical"
                    android:paddingStart="20dp">

                    <EditText
                        android:id="@+id/edit_contact_first_name"
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:backgroundTint="@color/color_3"


                        android:hint="First Name"
                        android:padding="8dp" />



                    <EditText
                        android:id="@+id/edit_contact_last_name"
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:drawablePadding="8dp"

                        android:backgroundTint="@color/color_3"

                        android:hint="Last Name"

                        android:padding="8dp" />

                    <EditText
                        android:id="@+id/edit_contact_email"
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:drawablePadding="8dp"
                        android:backgroundTint="@color/color_3"

                        android:hint="Email"
                        android:padding="8dp" />

                    <EditText
                        android:id="@+id/edit_contact_phone_number"
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:drawablePadding="8dp"
                        android:padding="8dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/color_3"
                        android:inputType="phone"
                        android:hint="Phone Number "
                        />

                    <EditText
                        android:id="@+id/edit_contact_gender"
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:drawablePadding="8dp"
                        android:padding="8dp"
                        android:layout_marginBottom="10dp"
                        android:backgroundTint="@color/color_3"
                        android:inputType="phone"
                        android:hint="Gender "
                        />





                </LinearLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/edit_contact_FBN_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="32dp"
                    android:background="@color/black"
                    app:borderWidth="0dp"
                    android:backgroundTint="@color/color_3"
                    android:src="@drawable/ic_done" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>